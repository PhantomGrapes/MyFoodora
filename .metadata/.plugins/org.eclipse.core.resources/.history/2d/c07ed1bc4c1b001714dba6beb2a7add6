package policy;

import java.util.ArrayList;
import java.util.Collections;
import java.util.Comparator;

import user.Courier;
import user.Customer;
import utilites.Coordinate;

public class FairOccupationDeliveryPolicy implements DeliveryPolicy{

	@Override
	public ArrayList<Courier> sort(ArrayList<Courier> couriers, Customer customer) {
		Double d1,d2;
		return Collections.sort(couriers, new Comparator<Courier>() {
			@Override
			public int compare(Courier c1, Courier c2){
				d1 = Coordinate.distanceBetweenTwoLocation(c1.getAddress(), customer.getAddress());
				d2 = Coordinate.distanceBetweenTwoLocation(c2.getAddress(), customer.getAddress());
				return d1.compareTo(d2);
			}
		});
	}

}
